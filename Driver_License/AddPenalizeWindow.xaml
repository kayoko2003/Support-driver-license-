<Window x:Class="Driver_License.AddPenalizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Driver_License"
        mc:Ignorable="d"
       Title="Thêm Mức Phạt" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Thêm Mức Phạt" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Text="Nội dung mức phạt" />
            <TextBox Name="tbContent" Height="100" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <TextBlock Text="Mức phạt" />
            <TextBox Name="tbFines" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Loại giấy phép" />
            <ComboBox Name="cbLicenseType" Height="30" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="SaveButton" Content="Lưu" Width="100" Height="30" Click="SaveButton_Click" Margin="10"/>
                <Button x:Name="CancelButton" Content="Hủy" Width="100" Height="30" Click="CancelButton_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
